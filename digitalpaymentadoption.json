{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Digital Payment Adoption by Country",
  "data": {
    "url": "https://raw.githubusercontent.com/radosty/radosty.github.io/refs/heads/main/Cleaned_European_Digital_Payment.csv"
  },
  "title": {
    "text": "European Digital Payment Adoption Rates",
    "subtitle": [
      "Tracking Financial Inclusion Through Digital Payments | Select Year: 2014, 2017, or 2021",
      "Data source: The Global Findex Database 2021 by the World Bank",
      ""
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "#1e3a8a",
    "font": "Inter, sans-serif",
    "subtitleFont": "Inter, sans-serif"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2014,
      "bind": {
        "input": "select",
        "options": [2014, 2017, 2021],
        "labels": ["2014", "2017", "2021"],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == year_select"}
  ],
  "selection": {
    "country_highlight": {"type": "multi", "fields": ["Country"]}
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "axis": {"labelAngle": -45, "labelLimit": 100, "title": null}
    },
    "y": {
      "field": "Digital Payment Adoption (%)",
      "type": "quantitative",
      "title": "Adoption (%)",
      "axis": {
        "grid": false,
        "tickCount": 6,
        "values": [0, 20, 40, 60, 80, 100]
      },
      "scale": {"domain": [0, 100]}
    },
    "color": {
      "field": "Digital Payment Adoption (%)",
      "type": "quantitative",
      "scale": {
        "domain": [0, 100],
        "range": ["#bfdbfe", "#1e40af"]
      }
    },
    "opacity": {
      "condition": {"selection": "country_highlight", "value": 1},
      "value": 0.7
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Digital Payment Adoption (%)", "type": "quantitative", "format": ".1f"}
    ]
  },
  "width": 600,
  "height": 400,
  "config": {
    "axis": {
      "labelFont": "Inter, sans-serif",
      "titleFont": "Inter, sans-serif",
      "labelColor": "#4b5563",
      "titleColor": "#1e3a8a"
    },
    "legend": {
      "labelFont": "Inter, sans-serif",
      "titleFont": "Inter, sans-serif"
    },
    "header": {
      "labelFont": "Inter, sans-serif",
      "titleFont": "Inter, sans-serif"
    },
    "title": {
      "font": "Inter, sans-serif",
      "fontSize": 20,
      "fontWeight": "bold",
      "subtitleFont": "Inter, sans-serif"
    },
    "view": {
      "stroke": "transparent"
    },
    "background": "#f8fafc"
  }
}
