{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Ethnicity of school children (2023)",
  "title": {
    "text": "Ethnicity of School Children (2021)",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "height": 400,
  "width": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/radosty/radosty.github.io/refs/heads/main/ethicity%20of%20school%20children.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": {
    "type": "bar",
    "color": "#4f81bd"
  },
  "encoding": {
    "y": {
      "field": "Ethnicity",
      "type": "ordinal",
      "title": "Ethnicity"
    },
    "x": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Percentage (%)",
      "scale": {"domain": [0, 100]}
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "#4f81bd"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": {"field": "Percentage", "type": "quantitative", "format": ".1f"}
      }
    }
  ]
}
